        public int sum() {
            // compute the sum of the numbers on stack
            // no restriction on run time for this method
            int lenSSL = mySSL.size();
            int total = 0;
            for (int i = 0; i <= lenSSL; i++) {
            // this can be simplified instead of creating a new variable
                // for arithmetic
                int arithmetic = mySSL.getItem(i);
                total += arithmetic;
            }
            return total;
        }



// ai adjusted my solution because they think that error is the reason why

public int getItem(int idx) {
    IntNode p = sentinel.next; // start at first real node
    // instead of writing it to the same variable outside the loop just return it
    for (int i = 0; i < idx; i++) {
        p = p.next;
    }
    return p.item;
}

public int sum() {
    int lenSSL = mySSL.size();
    int total = 0;
    for (int i = 0; i < lenSSL; i++) {   // careful: < not <=
        total += mySSL.getItem(i);
    }
    return total;
}


