    // SLList java
    public int getItem(int idx) {
        IntNode p = sentinel; // need to start at first real node
        int captured = 0;

        for (int i = 0; i < idx; i++) {
            p = p.next;
            int captureMe = p.item;
            captured = captureMe;
        }
        return captured;
    }

